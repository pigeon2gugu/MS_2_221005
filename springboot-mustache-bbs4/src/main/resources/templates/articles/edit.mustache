{{>layouts/header}}
{{#article}}
    <form class="container" action="/articles/{{id}}/update" method="post">{{!/articles 주소로 가서 post를 한다.}}
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input type="text" class="form-control" name="title">
            <div id = "titleHelp" class = "form-text">제목을 입력하세요</div>
            <label for="exampleFormControlInput2" class="form-label">Content</label>
            <input type="text" class="form-control" name="content">
            <div id = "contentHelp" class = "form-text">내용을 입력하세요</div>
        </div>
        <button type="submit" class="btn btn-primary">변경</button>
        <a class="btn btn-danger" href="/articles/{{id}}" role="button">취소</a>
    </form>
{{/article}}
{{>layouts/footer}}